ARG REGISTRY=''
ARG IMAGE_TAG=''
FROM ${REGISTRY}base-letsencrypt${BASE_IMAGE_TAG}
COPY ./nginx-swarm.conf /etc/nginx/sites-enabled/default
COPY ./nginx-entrypoint-swarm.sh /starsona/nginx-entrypoint.sh
COPY ./static /starsona/static
COPY ./media /starsona/media
WORKDIR /starsona
RUN chmod +x nginx-entrypoint.sh
ENTRYPOINT ["./nginx-entrypoint.sh"]
CMD ["/usr/sbin/nginx", "-g", "daemon off;"]
